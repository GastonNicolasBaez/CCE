{
  "name": "backend-cce",
  "version": "1.0.0",
  "description": "Backend API for Club Comandante Espora management system",
  "main": "src/server.js",
  "scripts": {
    "start": "npm run migrate:auto && node src/server.js",
    "dev": "nodemon src/server.js",
    "init-db": "node src/utils/initDatabase.js",
    "build": "echo 'No build step required'",
    "vercel-build": "npm install --production",
    "railway:start": "npm run migrate:auto && node src/server.js",
    "lint": "eslint src/",
    "test": "jest",
    "db:migrate": "sequelize-cli db:migrate",
    "db:migrate:undo": "sequelize-cli db:migrate:undo",
    "db:migrate:status": "sequelize-cli db:migrate:status",
    "db:seed": "sequelize-cli db:seed:all",
    "db:seed:undo": "sequelize-cli db:seed:undo:all",
    "migrate:auto": "node scripts/auto-migrate.js"
  },
  "keywords": [
    "express",
    "api",
    "club",
    "management",
    "payments",
    "sqlite",
    "sequelize"
  ],
  "author": "Club Comandante Espora",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mercadopago": "^2.0.4",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.35.2",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/pg": "^8.15.5",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "sequelize-cli": "^6.6.3",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
