{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ðŸš€ Start All Services",
      "type": "shell",
      "command": "start-app.bat",
      "windows": {
        "command": "start-app.bat"
      },
      "linux": {
        "command": "./start-app.sh"
      },
      "osx": {
        "command": "./start-app.sh"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Backend Only",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/BackendCCE"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": true,
        "clear": false
      },
    },
    {
      "label": "Frontend Only", 
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/FrontendCCE"
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "Stop All Services",
      "type": "shell",
      "command": "taskkill",
      "args": ["/f", "/im", "node.exe"],
      "windows": {
        "command": "taskkill",
        "args": ["/f", "/im", "node.exe"]
      },
      "linux": {
        "command": "pkill",
        "args": ["-f", "node"]
      },
      "osx": {
        "command": "pkill", 
        "args": ["-f", "node"]
      },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      }
    }
  ]
}